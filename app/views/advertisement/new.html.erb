<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Create a new Ad:</p>

  </div>
  <div class="col-mid-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter advertisement name' %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement description" %>
      </div>
      <div class="form-group">
        <%= f.label :price, class: "form-control" %>
          <%= f.text_area :price, class: "form-control", placeholder: "Enter the price" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
