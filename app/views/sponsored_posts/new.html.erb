<h1>New Sponsored Post</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines:</p>
    <ul>
      <li>Endorse</li>
      <li>Sell out</li>
      <li>Money is god, king, country and family now pay up</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @sponsoredpost] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter the new title." %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "What are you selling now?" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.number_field :price, class: "form-control", placeholder: "Enter the price." %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
